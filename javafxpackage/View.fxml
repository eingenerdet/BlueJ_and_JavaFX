<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" alignment="center" hgap="10" vgap="10" styleClass="root"
    
    fx:controller="javafxpackage.Controller"> 
    <children>

    	<!-- GridPane: ZeilenEbene 0: Eingabezeile -->

    	<Label fx:id="textfield_label" text="Eingabe:" alignment="CENTER" prefWidth="70.0" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="klickmich-label" />
    
		<TextField fx:id="textfield" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="klickmich-textfield" />

    	<!-- GridPane: ZeilenEbene 1: Button -->

        <Button fx:id="button" onAction="#manageButton" prefWidth="300.0"
            text="Klick!" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="klickmich-button" />

    	<!-- GridPane: ZeilenEbene 2: Ausgabezeile -->

        <Label fx:id="label_label" text="Ausgabe:" alignment="CENTER" prefWidth="70.0" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="klickmich-label" />
            
        <Label fx:id="label" prefWidth="300.0" text=""
            GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="klickmich-label" />
    
    </children>
</GridPane> 
